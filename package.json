{
  "name": "bparking-backend",
  "version": "1.0.0",
  "description": "Secure parking application backend with GraphQL API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "typeorm-ts-node-commonjs migration:run -d src/database/connection.ts --require tsconfig-paths/register",
    "db:migrate:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/connection.ts --require tsconfig-paths/register",
    "db:migrate:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/connection.ts --require tsconfig-paths/register",
    "db:seed": "npm run build && node dist/database/seed.js",
    "db:seed:dev": "ts-node -r tsconfig-paths/register src/database/seeds/seedData.ts",
    "db:seed:fresh": "npm run db:seed:dev"
  },
  "keywords": [
    "parking",
    "graphql",
    "express",
    "typescript",
    "authentication",
    "payment"
  ],
  "author": "bParking Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "apollo-server-express": "^3.12.1",
    "graphql": "^16.8.1",
    "type-graphql": "^2.0.0-beta.3",
    "reflect-metadata": "^0.1.13",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "@types/geojson": "^7946.0.14",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "redis": "^4.6.10",
    "twilio": "^4.19.0",
    "@googlemaps/google-maps-services-js": "^3.3.42",
    "stripe": "^14.7.0",
    "@fastify/multipart": "^8.3.1",
    "sharp": "^0.32.6",
    "aws-sdk": "^2.1490.0",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-slow-down": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.20",
    "@types/bcryptjs": "^2.4.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/cors": "^2.8.15",
    "@types/multer": "^1.4.9",
    "@types/compression": "^1.7.4",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.15",
    "@types/pg": "^8.10.9",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}